      .navbar {
        background: linear-gradient(45deg, #dc3545, #b02a37);
      }

      .navbar-brand {
        color: #fff !important;
        font-size: 1.8rem;
      }

      .nav-link {
        color: #f8f9fa !important;
        font-weight: 500;
        transition: 0.3s;
